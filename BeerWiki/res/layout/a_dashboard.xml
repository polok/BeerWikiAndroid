<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            style="@style/DashboardButtonBeerWikiStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableTop="@drawable/beer"
            android:onClick="onBeerClicked"
            android:text="@string/btn_dashboard_beers" />

        <Button
            style="@style/DashboardButtonBeerWikiStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableTop="@drawable/brewery"
            android:onClick="onBreweryClicked"
            android:text="@string/btn_dashboard_breweries" />
    </LinearLayout>

</ScrollView>